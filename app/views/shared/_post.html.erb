<div class="card">
  <div class="row g-0">
    <!-- サムネイルの表示 -->
    <div class="col-md-3">
      <div class="thumbnail" style="width: 100%; height: 100%;">
        <% video_item = youtube_get_item(post.movie_url) %>
        <% if !video_item.nil? %>
          <%= image_tag video_item.snippet.thumbnails.standard.url, style: "width: 100%; height: 100%;" %>
        <% else %>
          <div class="no_image", style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; background-color: #696969;">
            <h2>No Image</h2>
          </div>
        <% end %>
      </div>
    </div>
    <!-- コメント、タイトルなどの表示 -->
    <div class="col-md-9">
      <div class="card-body d-flex flex-column" style="padding: 10px; height: 100%;">

        <!-- ユーザーの表示 -->
        <%= link_to profile_path(post.user.id), style: "text-decoration: none; color: inherit;" do %>
          <div class="card-user d-flex">
            <div class="icon">
              <% if post.user.icon.url.present? %>
                <%= image_tag post.user.icon.url, width: "40px", height: "40px" %>
              <% else %>
                <%= image_tag "DefaultUserIcon.png", width: "40px", height: "40px" %>
              <% end %>
            </div>
            <div class="name">
              <p><%= post.user.name %></p>
            </div>
          </div>
        <% end %>
        
        <!-- コメントの表示 -->
        <p><%= post.comment %></p>

        <!-- 動画タイトル、表示回数、投稿日を下寄せで表示 -->
        <div class="card-other", style="margin-top: auto;"> 
          <% if !video_item.nil? %>
            <%= link_to video_item.snippet.title, post.movie_url, target: :_blank %>
          <% else %>
            動画が見つかりませんでした。
          <% end %>
          <p>投稿日:<%= posttime_output(post.created_at) %>, 表示回数:<%= post.view_count %>回</p>
          <%= postview_count(post) %>
        </div>
      </div>
    </div>
  </div>
</div>

